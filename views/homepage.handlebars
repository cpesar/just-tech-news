{{!-- <div>You are on the homepage</div> --}}

<ol class="post-list">
  {{!-- DEFINES WHERE THE LOOP BEGINS --}}
  {{#each posts as |post| }}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}})</span>
      </div>
      <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{!-- DEFINES WHERE THE LOOP ENDS --}}
  {{/each}}
</ol>